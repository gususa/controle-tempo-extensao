{
    "manifest_version": 3,
    "name": "Controle de Tempo em Redes Sociais",
    "version": "1.0",
    "description": "Extens√£o do Chrome para controle de tempo em redes sociais",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.facebook.com/*", "*://*.twitter.com/*", "*://*.instagram.com/*"],
        "js": ["content.js"]
      }
    ]
  }  
  